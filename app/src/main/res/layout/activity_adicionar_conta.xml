<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1976D2"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏦 Dados da Conta"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preencha os dados da conta bancária"
                android:textSize="14sp"
                android:textColor="#E3F2FD"
                android:gravity="center" />

        </LinearLayout>

        <!-- Formulário -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Número da Conta -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔢 Número da Conta"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/numero"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:inputType="number"
                    android:hint="Digite o número da conta"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_background"
                    android:paddingHorizontal="16dp"
                    android:textColor="#212121"
                    android:textColorHint="#757575" />

                <!-- Nome -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👤 Nome do Cliente"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/nome"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:hint="Digite o nome completo"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_background"
                    android:paddingHorizontal="16dp"
                    android:textColor="#212121"
                    android:textColorHint="#757575" />

                <!-- CPF -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🆔 CPF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/cpf"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:hint="Digite o CPF"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_background"
                    android:paddingHorizontal="16dp"
                    android:textColor="#212121"
                    android:textColorHint="#757575" />

                <!-- Saldo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💰 Saldo Inicial"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/saldo"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="24dp"
                    android:inputType="numberDecimal"
                    android:hint="Digite o saldo inicial"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_background"
                    android:paddingHorizontal="16dp"
                    android:textColor="#212121"
                    android:textColorHint="#757575" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAtualizar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="💾 Salvar Conta"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnRemover"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="🗑️ Excluir Conta"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_danger"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
