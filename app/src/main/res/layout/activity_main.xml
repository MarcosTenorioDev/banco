<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header com título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🏦 Banco Digital"
            android:textAlignment="center"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="16dp" />

        <!-- Card do Total no Banco -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💰 Total no Banco"
                    android:textSize="18sp"
                    android:textColor="#1976D2"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/totalDinheiroBanco"
                    android:text="R$ 0,00"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Grid de botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Primeira linha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnContas"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="📋 Contas"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/btnTransferir"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="💸 Transferir"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_secondary"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <!-- Segunda linha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnDebitar"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="📉 Debitar"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_danger"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/btnCreditar"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="📈 Creditar"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_success"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <!-- Terceira linha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnPesquisar"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="🔍 Pesquisar"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_info"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/btnTransacoes"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="📊 Transações"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_warning"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <!-- Quarta linha -->
            <Button
                android:id="@+id/btnClientes"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="👥 Clientes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/button_dark"
                android:textColor="#FFFFFF"
                android:enabled="false" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>